<!-- underscore express that this is a partial file -->
<div class="form-row">
    <!-- Title element -->
    <div class="form-item">
        <label>Title</label>
        <input type="text" name="title" value="<%= book.title %>">
    </div>
    <!-- Author element -->
    <div class="form-item">
        <label>Author</label>
        <select name="author">
            <% authors.forEach(author => {  %>
            <% if(author.id === book.author) { %>
            <option selected label="<%= author.name %>" value="<%= author.id %>"></option>
            <% } else { %>
            <option label="<%= author.name %>" value="<%= author.id %>"></option>
            <% } %>
            <% }); %>
        </select>
    </div>
</div>

<div class="form-row">
    <!-- Publish Date element -->
    <div class="form-item">
        <label>Publish Date</label> <!-- date is in wrong format: 2019-10-23T12:44 -->
        <input type="Date" name="publishDate"
            value="<%book.publishDate == null ? '' : book.publishDate.toISOString().split('T')[0]%>">
    </div>
    <!-- Page Count element -->
    <div class="form-item">
        <label>Page Count</label>
        <input type="number" name="pageCount" min="1" value="<%book.pageCount%>">
    </div>
</div>

<div class="form-row">
    <!-- Publish Date element -->
    <div class="form-item form-item-no-grow">
        <label>Cover</label>
        <input type="file" name="cover" class="filepond"> <!-- no default file value is allowed -->
    </div>
    <!-- Page Count element -->
    <div class="form-item">
        <label>Description</label>
        <textarea name="description"><% book.description %></textarea>
    </div>
</div>