<h2><%= author.name %></h2>

<a href="/authors/<%= author.id %>/edit">Edit</a>
<%- include('../partials/deleteForm', 
    {url: `/authors/${author.id}` }) %>

<% if(booksByAuthor.length > 0) { %>
    <h2>Books by author</h2>
    <% booksByAuthor.forEach(book => { %>
        <a href="/books/<%= book.id %>"> <!-- wrap book in an anchor tag -->
            <img height="150px" width="150px" src="<%= book.coverImagePath %>">
        </a>
        <div>Title: <%= book.title %>, Description: <%= book.description %></div>
    <%});%>
<% } %>